a = num4(1
  2 3
  4
)
b = num4(
  1
  2 3 # Comments can be included in the num4 construction
  4
)
b = num4 1 2 3 4
assert_eq a b

x = list.fold(
  [1 2 3]
  0
  |a b| a + b
)
assert_eq x 6

x = list.fold [1 2 3] 0 |a b|
  a + b

assert_eq x 6

x = |
  long_arg # This is an argument that needs an explanation
  long_arg_2
|
  # The body must be indented
  assert_eq long_arg long_arg_2

x 1 1

m = {
  foo:
    42
  bar:
    -1
}
assert_eq m.bar -1

x = [
  42
  99
]
assert_eq x[1] 99


###### '\' can be used to break lines when implicit breaking isn't allowed
a = 1 + \
    2 + 3 + \
    4
assert_eq a 10

x = num4 \
  0 1 2 3
assert_eq \
  x \
  num4 0 1 \
       2 3
