import math
from test import assert_eq assert_near

export tests =
  test_trigonometry: ||
    assert_near (math.sin math.pi) 0 1.0e-15
    assert_eq (math.cos math.pi) -1
    assert_eq (math.cos math.tau) 1

  test_pow: ||
    assert_eq (math.pow 2 8) 256

  test_min_max: ||
    assert_eq (math.min 1 2) 1
    assert_eq (math.max 1 2) 2

  test_clamp: ||
    assert_eq (math.clamp 0 1 2) 1
    assert_eq (math.clamp 3 1 2) 2
