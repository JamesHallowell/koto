import list thread
import test.assert_eq

export tests =
  test_spawn_4_threads_and_join: ||
    data = list.with_size 8 0

    worker = |i|
      data[i] = 10 + i
      data[i + 4] = 14 + i

    threads = (0..4).iter().transform(|i| thread.create || worker i).to_tuple()

    for t in threads
      t.join()

    assert_eq data [10..18]
